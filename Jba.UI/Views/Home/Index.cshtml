@model Jba.UI.ViewModels.FileImportViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">File Importer</h1>
</div>


<div>
    <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Upload">
        <div class="form-group">
            <div class="col-sm-10">
                <div>
                    <input asp-for="PercipitationFile" class="form-control custom-file-input" />
                    <label class="custom-file-label">Select file</label>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Import</button>
            </div>
        </div>

        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>


